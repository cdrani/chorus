{
  "short_name": "Chorus",
  "name": "Chorus - Spotify Enhancer",
  "description": "Enhance Spotify with controls to save favourite snips, auto-skip tracks, and set global and custom speed. More to come!",
  "version": "1.5.1",
  "manifest_version": 3,
  "author": "cdrani",
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": [
        "utils/state.js",
        "content-script.js"
      ],
      "css": [
        "styles.css"
      ],
      "matches": [
        "*://open.spotify.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "resources": [
        "utils/*.js",
        "models/*.js",
        "events/*.js",
        "components/*.js",
        "observers/*.js",
        "stores/*.js",
        "actions/*.js",
        "data/*.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "chorus@cdrani.dev",
      "strict_min_version": "116.0"
    }
  }
}
